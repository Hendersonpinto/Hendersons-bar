<%= render '/shared/navbar' %>
<div class="container" style="margin-top: 75px;">
  <div class="search-form index-form">
  <%= form_tag cocktails_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search for a cocktail name or an ingredient"
    %>
    <%= submit_tag "Search", class: "btn_gold" %>
  <% end %>
  </div>
  <h2 id="title-index"><%= @title %></h2>
  <div class="separator2"></div>
  <div class="main-container">
    <% @popular.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="cocktail-card">
          <h3> <%= cocktail.name.upcase%></h3>
          <% if cocktail.description %>
          <p> <%= cocktail.description %></p>
          <% else %>
          <p> <%= cocktail.instructions %></p>
          <% end %>
          <p id="price"><%= cocktail.category %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>






  <h2 id="lala">Cocktails list</h2>
<div class="container">
<%= simple_form_for [@cocktail] do |f| %>
  <%= f.input :name, label: 'Cocktail name' %>
  <%= f.submit "add a cocktail", class: "btn btn-primary" %>


<% end %>
</div>
<%= link_to "Back to list", cocktails_path, class: "btn btn-primary mt-1"%>









