<%= render '/shared/small_banner' %>
<div class="container">
  <div class="show-wrapper">
    <h2 id="title-index" style="margin-top: 20px;"><%= @cocktail.name.upcase %></h2>
    <div class="separator2"></div>
    <div class="cards-area">
      <% @doses.each do |dose| %>
        <div class="dose-card">
          <div class="info-dose">
            <p><%= dose.description %> of <%= dose.ingredient.name %></p>
          </div>
          <div class="buttons-dose">
            <%= link_to "Edit", edit_dose_path(dose.id), class:"btn_gold" %>
            <%= link_to "Delete", dose_path(dose.id), class:"btn_gold",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
      <div id="add-div">
        <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class:"btn_gold"%>
      </div>
    <div class="buttons-recipe">
      <%= link_to "Back to cocktail", cocktail_path(params[:id]), class:"btn_gold" %>
      <%= link_to "Delete this cocktail", cocktail_path(params[:id]), class:"btn_gold",
            method: :delete,
            data: { confirm: "Are you sure you want to delete this cocktail?" } %>
    </div>
    </div>
  </div>
</div>


