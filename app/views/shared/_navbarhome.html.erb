<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top navbar-home">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.jpg", class: "avatar"%>
  <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home",root_path, class: "nav-link", style: "font-size:20px" %>
      </li>
      <li class="nav-item">
        <%= link_to "Cocktails", cocktails_path, class: "nav-link", style: "font-size:20px" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, class:"nav-link", style: "font-size:20px",
            method: :delete,
            data: { confirm: "Are you sure you want to log out?" } %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path, class: "nav-link", style: "font-size:20px" %>
        </li>
      <% end %>
      <li class="nav-item dropdown">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
