<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.jpg", class: "avatar"%>
  <% end %>

    <span id="nav-title">Henderson's Bar</span>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>




  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home",root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Cocktails", cocktails_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <div class="search-form" id="search-navbar">
          <%= form_tag cocktails_path, class: "search-tagg", method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Search for a cocktail name or an ingredient"
            %>
            <%= submit_tag "Search", class: "btn_gold" %>
          <% end %>
          </div>
      </li>
      <li class="nav-item dropdown">
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
